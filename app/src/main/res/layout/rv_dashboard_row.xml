<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rv_dashboard_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/orange"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/rv_dashboard_message_tv"
        app:layout_constraintTop_toTopOf="@id/rv_dashboard_message_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/rv_dashboard_message_tv"
        android:layout_width="0dp"
        android:maxWidth="250dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/colorAccent"
        android:padding="5dp"
        android:background="@drawable/rv_build_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rv_dashboard_username_tv"
        />

    <TextView
        android:id="@+id/rv_dashBoard_read_by_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>